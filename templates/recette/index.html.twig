{% extends 'base.html.twig' %}

{% block title %}Recette index{% endblock %}

{% block body %}
    <h1>Recette index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description3</th>
                <th>Fiche</th>
                <th>Notes</th>
                <th>Avis</th>
                <th>Categories</th>
                <th>Avatar</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.description4 }}</td>
                <td>{{ recette.fiche }}</td>
                <td>
                    <ul>
                        {% for note in recette.notes %}
                        <li>{{ note.note }} / 5</li>
                        {% endfor %}
                    </ul>
</td>
                <td>
                    <ul>
                        {% for note in recette.notes %}
                        <li>{{ note.description1 }}</li>
                        {% endfor %}
                    </ul>
</td>
                <td> 
                    <ul>
                       {% for categorie in recette.categories %}
                       <li>{{ categorie.description2 }}</li>
                       {% endfor %}
                    </ul>
          </td>
                <td>{{ recette.avatar }}</td>
                <td>
              
                    <a href="{{ path('app_recette_show', {'id': recette.id}) }}">show</a>
                   
                      {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>
                 {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recette_new') }}">Create new</a>
{% endblock %}
